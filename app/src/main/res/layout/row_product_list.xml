<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="8dp"
    android:weightSum="10">

    <ImageView
        android:id="@+id/products_list_row_imageview_id"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="#000"
        android:layout_marginBottom="5dp"/>


    <TextView
        android:id="@+id/product_list_row_name_textview_id"
        android:layout_toRightOf="@+id/products_list_row_imageview_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Product Name"
        android:textColor="@color/colorBlack"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/product_list_row_price_textview_id"
        android:layout_width="130dp"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/products_list_row_imageview_id"
        android:layout_toEndOf="@+id/products_list_row_imageview_id"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Price"
        android:textColor="@color/colorBlack"
        android:textSize="18dp"
        android:layout_marginBottom="5dp"/>


    <Button
        android:id="@+id/product_list_row_add_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="ADD"
        android:layout_marginBottom="5dp"
        android:textColor="@color/colorWhite" />

</RelativeLayout>
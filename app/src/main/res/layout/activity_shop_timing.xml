<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopTimingActivity">

    <TextView
        android:id="@+id/shop_timing_activity_title_1_textview_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Shop timing manual"
        android:textColor="#000000"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/shop_timing_activity_title_switch_id"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/shop_timing_activity_title_switch_id"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:onClick="onClick"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@id/shop_timing_activity_title_1_textview_id"
        app:layout_constraintLeft_toRightOf="@id/shop_timing_activity_title_1_textview_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/shop_timing_activity_title_1_textview_id" />

    <TextView
        android:id="@+id/shop_timing_activity_title_2_textview_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:background="#66023c"
        android:gravity="center"
        android:text="Shop timing 1"
        android:textColor="@color/colorWhite"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/shop_timing_activity_title_1_textview_id" />

    <TextView
        android:id="@+id/shop_timing_activity_open_1_textview_id"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorGreen"
        android:gravity="left|center_vertical"
        android:text="Open time 1"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/shop_timing_activity_open_1_btn_id"
        app:layout_constraintTop_toBottomOf="@id/shop_timing_activity_title_2_textview_id" />

    <Button
        android:id="@+id/shop_timing_activity_open_1_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/open_time_background"
        android:elevation="5dp"
        android:layout_marginRight="15dp"
        android:onClick="onClick"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="Open Time"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/shop_timing_activity_open_1_textview_id"
        app:layout_constraintLeft_toRightOf="@id/shop_timing_activity_open_1_textview_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shop_timing_activity_open_1_textview_id" />

    <TextView
        android:id="@+id/shop_timing_activity_close_1_textview_id"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginLeft="16dp"
        android:gravity="left|center_vertical"
        android:text="Close timing 1"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="16dp"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/shop_timing_activity_close_1_btn_id"
        app:layout_constraintTop_toBottomOf="@id/shop_timing_activity_open_1_textview_id" />

    <Button
        android:id="@+id/shop_timing_activity_close_1_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/close_shop_time"
        android:onClick="onClick"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="Close Time"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/shop_timing_activity_close_1_textview_id"
        app:layout_constraintLeft_toRightOf="@id/shop_timing_activity_close_1_textview_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/shop_timing_activity_close_1_textview_id"
        app:layout_constraintVertical_bias="0.538" />

    <TextView
        android:id="@+id/shop_timing_activity_title_3_textview_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textColor="#000000"
        android:text="Another textview and switch"
        android:textSize="24dp"


        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/shop_timing_activity_title_3_switch_id"
        app:layout_constraintTop_toBottomOf="@id/shop_timing_activity_close_1_textview_id"
        app:layout_goneMarginLeft="16dp" />

    <Switch
        android:id="@+id/shop_timing_activity_title_3_switch_id"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:onClick="onClick"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@id/shop_timing_activity_title_3_textview_id"
        app:layout_constraintLeft_toRightOf="@id/shop_timing_activity_title_3_textview_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/shop_timing_activity_title_3_textview_id" />

    <TextView
        android:id="@+id/shop_timing_activity_title_4_textview_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="#66023c"
        android:gravity="center"
        android:text="Shop timing 2"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/shop_timing_activity_title_3_textview_id" />

    <TextView
        android:id="@+id/shop_timing_activity_open_2_textview_id"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:gravity="left|center_vertical"
        android:text="Open time 2"
        android:textSize="24dp"
        android:textColor="@color/colorGreen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/shop_timing_activity_open_1_btn_id"
        app:layout_constraintTop_toBottomOf="@id/shop_timing_activity_title_4_textview_id" />

    <Button
        android:id="@+id/shop_timing_activity_open_2_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:background="@drawable/open_time_background"
        android:elevation="5dp"
        android:onClick="onClick"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="Open Time"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toTopOf="@+id/shop_timing_activity_close_2_textview_id"
        app:layout_constraintLeft_toRightOf="@id/shop_timing_activity_open_2_textview_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/shop_timing_activity_open_2_textview_id" />

    <TextView
        android:id="@+id/shop_timing_activity_close_2_textview_id"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginLeft="16dp"
        android:gravity="left|center_vertical"
        android:text="Close timing 2"
        android:textSize="24dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/shop_timing_activity_close_2_btn_id"
        app:layout_constraintTop_toBottomOf="@id/shop_timing_activity_open_2_textview_id" />

    <Button
        android:id="@+id/shop_timing_activity_close_2_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/close_shop_time"
        android:onClick="onClick"
        android:paddingLeft="8dp"
        android:layout_marginRight="15dp"
        android:paddingRight="8dp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:text="Close Time"
        app:layout_constraintBottom_toBottomOf="@+id/shop_timing_activity_close_2_textview_id"
        app:layout_constraintLeft_toRightOf="@id/shop_timing_activity_close_2_textview_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/shop_timing_activity_close_2_textview_id" />

    <Button
        android:id="@+id/save_timing_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="148dp"
        android:layout_marginStart="148dp"
        android:onClick="onClick"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
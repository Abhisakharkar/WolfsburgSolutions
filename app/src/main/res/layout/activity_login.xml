<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abhishek.work.LoginActivity">

    <TextView
        android:id="@+id/signIn_textview_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        android:gravity="center_horizontal"
        android:text="Sign In"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/email_edittext_login_id"
        style="@style/AuthEdittextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@id/signIn_textview_id"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        android:layout_toLeftOf="@id/login_activity_done_imageview_id"
        android:drawableLeft="@drawable/vector_mail"
        android:drawablePadding="8dp"
        android:hint="Email" />

    <ProgressBar
        android:id="@+id/login_activity_mail_check_progress_bar_id"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/signIn_textview_id"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/login_activity_done_imageview_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/signIn_textview_id"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/vector_circular_done" />

    <EditText
        android:id="@+id/password_edittext_login_id"
        style="@style/AuthEdittextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_edittext_login_id"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/vector_lock"
        android:drawablePadding="8dp"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/signIn_btn_id"
        style="@style/AuthButtonStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_edittext_login_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:elevation="5dp"
        android:text="sign in" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_signIn_btn_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/signIn_btn_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/sign_up_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="don't have account ?"
            android:textSize="18sp" />

        <Button
            android:id="@+id/sign_up_link_btn_id"
            style="@style/AuthButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:elevation="5dp"
            android:text="Sign Up" />

    </LinearLayout>

</RelativeLayout>

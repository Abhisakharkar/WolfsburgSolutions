<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abhishek.work.AuthenticationActivities.LoginActivity">

    <TextView
        android:id="@+id/signIn_textview_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        android:gravity="center_horizontal"
        android:text="Sign In"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/email_edittext_login_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signIn_textview_id"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        android:hint="Email"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" />

    <EditText
        android:id="@+id/password_edittext_login_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_edittext_login_id"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:hint="Password"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" />

    <Button
        android:id="@+id/signIn_btn_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_edittext_login_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@color/colorWhite"
        android:elevation="5dp"
        android:gravity="center"
        android:text="sign in" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_signIn_btn_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/signIn_btn_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <LinearLayout
        android:id="@+id/sign_up_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="don't have account ?"
            android:textSize="18sp" />

        <Button
            android:id="@+id/sign_up_link_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:background="#888"
            android:elevation="5dp"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

</RelativeLayout>

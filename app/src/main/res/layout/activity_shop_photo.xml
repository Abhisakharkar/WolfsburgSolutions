<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abhishek.work.ShopPhotoActivity">

    <TextView
        android:id="@+id/shop_photo_activity_title_textview_id"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="#dfdfdf"
        android:gravity="center"
        android:text="Shop shop Image"
        android:textSize="24dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/shop_photo_activity_edit_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/shop_photo_activity_title_textview_id"
        android:text="Change" />

    <ImageView
        android:id="@+id/shop_photo_activity_imageview_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/shop_photo_activity_save_btn_id"
        android:layout_below="@id/shop_photo_activity_title_textview_id" />

    <Button
        android:id="@+id/shop_photo_activity_save_btn_id"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:text="Save shop Image" />

</RelativeLayout>

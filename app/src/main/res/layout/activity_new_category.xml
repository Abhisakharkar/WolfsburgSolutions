<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.abhishek.work.NewCategoryActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/new_category_activity_title_textview_id"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#dfdfdf"
            android:gravity="center"
            android:text="Categories"
            android:textSize="24dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/new_category_activity_search_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_horizontal"
            android:layout_marginRight="8dp"
            android:backgroundTint="#dfdfdf"
            android:src="@drawable/vector_search"
            android:visibility="visible" />

        <EditText
            android:id="@+id/new_category_activity_search_edittext_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:visibility="invisible" />

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/new_category_activity_recycler_view_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>

<resources>

    <!--  The launcher splash screen theme  -->
    <style name="AppTheme.launcher">
        <item name="android:windowBackground">@drawable/spash_screen</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AuthActivityStyle">
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- login and sign up Button Style -->
    <style name="AuthButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/background_btn</item>
    </style>

    <!-- Login and SignUp edittext style -->
    <style name="AuthEdittextStyle">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
    </style>

    <style name="ProfileEdittextStyle">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="AuthButtonStyle.LinkButtonStyle">
        <item name="android:background">@drawable/background_btn_accent</item>
    </style>


    // OLD Styles

    // Custom Theme for Sign Up Activity

    <style name="SignUpActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <!--
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">#ddd</item>
        <item name="android:windowLightStatusBar">true</item>
        -->
    </style>

    <style name="DeliveryActivitySettings">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>


    </style>


    <style name="DeliveryActivitySettingsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#C62828</item>
        <item name="colorPrimary">#F44336</item>

    </style>

    <style name="ShopTimingActivity">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">75dp</item>
        <item name="android:layout_marginStart">75dp</item>
        <item name="android:textSize">18sp</item>

    </style>

    // Custom Theme for Sign In Activity

    <style name="SignInActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">#ddd</item>
        -->
    </style>
</resources>
